<UserControl x:Class="Winleafs.Wpf.Views.Effects.EffectComboBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Winleafs.Wpf.Views.Effects"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="273" Width="{Binding Width}" DataContextChanged="UserControl_DataContextChanged">
    <Grid x:Name="ContentGrid">
        <Label x:Name="EffectLabel" Foreground="White" Margin="0,10,0,0" Content="{Binding EffectName}" Padding="5,3,0,0"/>
    </Grid>
</UserControl>
