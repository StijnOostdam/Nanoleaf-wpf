<UserControl x:Class="Winleafs.Wpf.Views.Effects.EffectComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Winleafs.Wpf.Views.Effects"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="273">
    <ComboBox Foreground="White" x:Name="ComboBox" ItemsSource="{Binding Path=Effects}" SelectedValue="{Binding Path=SelectedEffect}" Height="40" SelectionChanged="ComboBox_SelectionChanged">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <local:EffectComboBoxItem/>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>
