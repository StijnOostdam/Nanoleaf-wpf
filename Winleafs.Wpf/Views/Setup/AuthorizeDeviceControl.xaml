<UserControl x:Class="Winleafs.Wpf.Views.Setup.AuthorizeDeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Winleafs.Wpf.Views.Setup"
             mc:Ignorable="d"
             d:DesignHeight="730" d:DesignWidth="600">

    <Grid Background="{StaticResource NanoleafBlack}">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap"
                   Text="{x:Static local:Resources.Step2}" VerticalAlignment="Top"
                   Foreground="White" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,95,0,0" TextWrapping="Wrap"
                   Text="{x:Static local:Resources.Step3}" VerticalAlignment="Top"
                   Foreground="White" FontSize="20"/>
        <Button Content="{x:Static local:Resources.Pair}" HorizontalAlignment="Left"
                Margin="250,227,0,0" VerticalAlignment="Top" Width="100" Height="45"
                Background="{StaticResource NanoleafGreen}" Foreground="White" FontSize="25"
                BorderBrush="{x:Null}" Click="Pair_Click"/>
    </Grid>
</UserControl>
