<UserControl x:Class="Winleafs.Wpf.Views.MainWindows.CurrentEffectUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Winleafs.Wpf.Views.MainWindows"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="400">
    <Grid>
        <Label Content="{x:Static local:Resources.CurrentEffect}" ContentStringFormat="{}{0}:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="White" />
        <Label Content="{x:Static local:Resources.CurrentBrightness}" ContentStringFormat="{}{0}:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="White" Margin="0,29,0,0" />
        <Label x:Name="CurrentEffect" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="White" Margin="135,0,0,0" />
        <Label x:Name="CurrentBrightness" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="White" Margin="183,29,0,0" />
    </Grid>
</UserControl>
