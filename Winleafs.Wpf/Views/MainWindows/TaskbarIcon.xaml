<UserControl x:Class="Winleafs.Wpf.Views.MainWindows.TaskbarIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Winleafs.Wpf.Views.MainWindows"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200">
    <Grid Background="{StaticResource NanoleafBlack}">
        <ComboBox x:Name="DevicesDropdown" Margin="0,10,10,0" VerticalAlignment="Top" SelectedItem="{Binding SelectedDevice}" ItemsSource="{Binding DeviceNames}" HorizontalAlignment="Right" Width="180"/>
        <Button Click="Quit_Click" Height="40" VerticalAlignment="Bottom" Background="{StaticResource NanoleafGreen}" Foreground="White" BorderBrush="{x:Null}" Content="{x:Static local:Resources.Quit}" FontSize="20"/>
    </Grid>
</UserControl>
