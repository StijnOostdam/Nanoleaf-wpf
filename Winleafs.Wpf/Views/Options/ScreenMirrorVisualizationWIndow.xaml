<Window x:Class="Winleafs.Wpf.Views.Options.ScreenMirrorVisualizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Winleafs.Wpf.Views.Options"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="ScreenMirrorVisualization"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Canvas x:Name="CanvasArea"></Canvas>
        <Label x:Name="CloseInfoLabel" Content="{x:Static local:Resources.CloseInfoLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="35" Foreground="White" />
    </Grid>
</Window>
