<UserControl x:Class="Winleafs.Wpf.Views.Options.DeviceUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Winleafs.Wpf.Views.Options"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="550">
    <Grid>
        <Label Content="{Binding DeviceName}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15" Margin="5,5,0,0"/>
        <Button Content="{x:Static local:Resources.Delete}" HorizontalAlignment="Right"
                                Margin="0,5,5,0" Width="115" Background="{StaticResource NanoleafGreen}"
                                Foreground="White" BorderBrush="{x:Null}" Height="30"
                                VerticalAlignment="Top" Click="Delete_Click"/>
    </Grid>
</UserControl>
