<UserControl x:Class="Winleafs.Wpf.Views.Options.ColorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="520">
    <Grid>
        <Label Content="{Binding Description}" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="20" Height="40" Width="450"/>
        <Button VerticalAlignment="Top" Height="35" Background="{x:Null}" BorderBrush="{x:Null}" Click="Delete_Click" Margin="0,2,4,0" HorizontalAlignment="Right" Width="35">
            <Image Source="../../Icons/appbar.delete.png"></Image>
        </Button>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="20" Stroke="Black" VerticalAlignment="Top" Width="20" Margin="3,10,0,0" x:Name="ColorIndicator"/>
    </Grid>
</UserControl>
