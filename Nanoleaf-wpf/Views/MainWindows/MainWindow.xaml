<Window x:Class="Winleafs.Wpf.Views.MainWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mainWindows="clr-namespace:Winleafs.Wpf.Views.MainWindows"
        mc:Ignorable="d"
        Title="Winleafs" Height="450" Width="800"
        Closing="Window_Closing" >
    <DockPanel Background="{StaticResource NanoleafBlack}">
        <Grid DockPanel.Dock="Left">
            <Label Content="{x:Static mainWindows:Resources.Schedules}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White"/>
            <Button  Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="35" Height="35" Background="{x:Null}" BorderBrush="{x:Null}" Click="AddSchedule_Click" Margin="275,11,0,0">
                <Image Source="../../Icons/appbar.add.png"/>
            </Button>
            <StackPanel HorizontalAlignment="Left" Height="Auto" Margin="10,47,0,0" VerticalAlignment="Stretch" Width="300" x:Name="ScheduleList">
                <Border BorderBrush="White" BorderThickness="0 1 1 0" Height="Auto"/>
            </StackPanel>
            <Button Content="{x:Static mainWindows:Resources.Stuck}" ToolTip="{x:Static mainWindows:Resources.StuckMessage}" HorizontalAlignment="Left" Margin="315,374,-109,0" VerticalAlignment="Top" FontSize="10"
                    Width="104" Height="37" Background="{StaticResource NanoleafGreen}" Foreground="White" BorderBrush="{x:Null}" Click="Stuck_Click"/>
        </Grid>
        <Grid>
            <Button Content="{x:Static mainWindows:Resources.Options}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="84" Height="27" Background="{StaticResource NanoleafGreen}" Foreground="White" BorderBrush="{x:Null}" Click="Options_Click"/>
            <Button Content="{x:Static mainWindows:Resources.ResetAllSettings}" HorizontalAlignment="Left" Margin="366,384,0,0" VerticalAlignment="Top" Width="106" Height="27" Background="{StaticResource NanoleafGreen}" Foreground="White" BorderBrush="{x:Null}" Click="Reset_Click"/>
            <mainWindows:OverrideScheduleUserControl Margin="10,42,73,323" Height="55" Width="400"/>
            <Button Content="{x:Static mainWindows:Resources.ReloadEffects}" HorizontalAlignment="Left" Margin="99,10,0,0" VerticalAlignment="Top" Width="84" Height="27" Background="{StaticResource NanoleafGreen}" Foreground="White" BorderBrush="{x:Null}" Click="Reload_Click"/>
        </Grid>

    </DockPanel>
</Window>
