<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Options="clr-namespace:Winleafs.Wpf.Views.Popup" x:Class="Winleafs.Wpf.Views.Popup.Popup"
        mc:Ignorable="d"
        Title="Popup" Height="200" Width="500" ResizeMode="NoResize">
    <Grid Background="{StaticResource NanoleafBlack}">
        <Button Content="{x:Static Options:PopupResource.Ok}" HorizontalAlignment="Left" Margin="200,130,0,0" VerticalAlignment="Top" Width="84" Height="27" Background="{StaticResource NanoleafGreen}" Foreground="White" BorderBrush="{x:Null}" Click="Ok_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,21,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="100" Width="400" Foreground="White" Name="PopupContent" TextAlignment="Center"/>
    </Grid>
</Window>
